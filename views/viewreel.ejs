        <section class="reel-info-container px-4 pb-3 pt-2 sticky top-0 bg-[#1c1e22] md:bg-transparent md:static">
            <h2 class="pri-title text-3xl font-bold text-[#969696]"><%= reel.title %></h2>
            <p class="pri-caption text-xl font-semibold"><%= reel.caption %></p>
        </section>
        <% if(reel.captures.length > 0) {%>
            <% reel.captures.reverse().forEach((cap, idx) => { %> 
                <% if(cap.type === 'image') {%> 
                    <!-- #22242c -->
