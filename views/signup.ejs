<%- include('partials/header') -%>
    <main id="signupMain" class="inter-300">
        <h1>Create your progressio account</h1>
        <div id="signupContainer">
            <section>
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <form action="/signup" method="POST">
                    <div class="signupDiv">
                        <label for="userName" class="form-label">User Name</label>
                        <input placeholder="Enter a username" type="text" class="form-control" id="userName" name="userName">
                      </div>
                    <div class="signupDiv">
                      <label for="exampleInputEmail1" class="form-label">Email address</label>
                      <input placeholder="Enter a valid email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                      <div id="emailHelp" class="form-text">**We'll never share your email with anyone else.</div>
                    </div>
                    <div class="signupDiv">
                      <label for="password" class="form-label">Password</label>
                      <input placeholder="Enter a password" type="password" class="form-control" id="password" name="password">
                    </div>
                    <div class="signupDiv">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <input placeholder="Confirm your password" type="password" class="form-control" id="confirmPassword" name="confirmPassword">
                      </div>
                    <button type="submit" class="signupbtn">Submit</button>
                  </form>
            </section>
            <a href="/login" id="loginRedirect">Already have an account?</a>
        </div>
    </main>

<%- include('partials/footer') -%>